{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "paths": {
      "@/*": ["src/*"]
    },

    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "vite/client",
      "node"
    ]
  },
  "include": [
    "next-env.d.ts",
    "vitest.config.*",

    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.mts",
    "tests/**/*.cts",
    "tests/e2e/.setup/**/*.{ts,tsx}",

    "src/**/__tests__/**/*.{ts,tsx}",
    "src/**/*.{test,spec}.{ts,tsx}",

    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "coverage"
  ]
}
